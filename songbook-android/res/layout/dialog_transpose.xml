<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<Spinner android:id="@+id/transpose_spinner"
		android:layout_height="wrap_content" android:layout_width="150dp"
		android:layout_centerHorizontal="true" />
	<Button android:id="@+id/transpose_cancel" android:layout_width="120dp"
		android:layout_height="wrap_content" android:text="@string/menu_cancel"
		android:layout_below="@id/transpose_spinner" />
	<Button android:id="@+id/transpose_ok" android:layout_width="120dp"
		android:layout_height="wrap_content" android:text="@string/menu_ok"
		android:layout_below="@id/transpose_spinner" android:layout_toRightOf="@id/transpose_cancel" />

</RelativeLayout>